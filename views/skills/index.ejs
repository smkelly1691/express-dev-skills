 <%- include('../partials/header') %> 
  <div class="main">
    <h1>Developer Skills</h1>
    <ul>
      <% skills.forEach(function(s) { %>
        <li>
          <form 
            action="/skills/<%= s.id %>?_method=DELETE"
            class="delete-form"
            method="POST"
          >
            <button type="submit">X</button>
          </form>
          <a href="/skills/<%= s.id %>">
            <%= s.skill %>
          </a>
            - 
          <%= s.done ? 'done' : 'not done' %>
        </li>
      <% }); %>
    </ul>
    <div class="navigation">
      <a href="/skills/new">Add Skill</a>
      <a href="../">| Back to Home</a>
    </div>
  </div>
</body>
</html>